---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="404 - Not Found"
  description="The page you're looking for doesn't exist"
  noindex={true}
>
  <div class="error-page">
    <div class="error-page__content">
      <div class="error-page__terminal">
        <div class="error-page__header">
          <span class="error-page__dot error-page__dot--red"></span>
          <span class="error-page__dot error-page__dot--yellow"></span>
          <span class="error-page__dot error-page__dot--green"></span>
        </div>
        <div class="error-page__body">
          <p class="error-page__prompt">
            <span class="error-page__user">visitor</span>
            <span class="error-page__at">@</span>
            <span class="error-page__host">architect_log</span>
            <span class="error-page__colon">:</span>
            <span class="error-page__path">~</span>
            <span class="error-page__dollar">$</span>
          </p>
          <p class="error-page__command">cd /requested/page</p>
          <p class="error-page__output">
            <span class="error-page__error">bash: cd: /requested/page: No such file or directory</span>
          </p>
          <p class="error-page__code">
            <span class="error-page__status">exit status:</span>
            <span class="error-page__number">404</span>
          </p>
        </div>
      </div>

      <div class="error-page__actions">
        <a href="/" class="error-page__link">
          <span class="error-page__link-prompt">$</span>
          cd ~
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .error-page {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-panel-padding);
  }

  .error-page__content {
    max-width: 500px;
    width: 100%;
  }

  .error-page__terminal {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-panel);
  }

  .error-page__header {
    display: flex;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background-color: var(--color-bg-tertiary);
    border-bottom: 1px solid var(--color-border-secondary);
  }

  .error-page__dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .error-page__dot--red {
    background-color: #ff5f56;
  }

  .error-page__dot--yellow {
    background-color: #ffbd2e;
  }

  .error-page__dot--green {
    background-color: #27c93f;
  }

  .error-page__body {
    padding: 1.5rem;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    line-height: var(--leading-code);
  }

  .error-page__prompt {
    margin-bottom: 0.5rem;
  }

  .error-page__user {
    color: var(--color-terminal-green);
  }

  .error-page__at {
    color: var(--color-text-muted);
  }

  .error-page__host {
    color: var(--color-syntax-variable);
  }

  .error-page__colon {
    color: var(--color-text-muted);
  }

  .error-page__path {
    color: var(--color-syntax-string);
  }

  .error-page__dollar {
    color: var(--color-text-secondary);
    margin-left: 0.5rem;
  }

  .error-page__command {
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
  }

  .error-page__output {
    margin-bottom: 1rem;
  }

  .error-page__error {
    color: #ff5f56;
  }

  .error-page__code {
    color: var(--color-text-muted);
  }

  .error-page__status {
    margin-right: 0.5rem;
  }

  .error-page__number {
    color: var(--color-amber);
    font-weight: 600;
  }

  .error-page__actions {
    margin-top: 2rem;
    text-align: center;
  }

  .error-page__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-md);
    transition: all var(--duration-fast) var(--ease-out);
  }

  .error-page__link:hover {
    color: var(--color-terminal-green);
    border-color: var(--color-terminal-green);
  }

  .error-page__link-prompt {
    color: var(--color-terminal-green);
  }
</style>
